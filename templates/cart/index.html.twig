{% extends 'base.html.twig' %}

{% block title %}Mon Panier
{% endblock %}

{% block content %}
    <table class="table mt-1">
        <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col"></th>
                <th scope="col">Quantit√©</th>
                <th scope="col">Prix</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
        {% set total = null %}
            {% for product in cart%}
                <tr>
                    <th scope="row">
                        <img src="/uploads/{{product.product.illustration}}" alt="{{product.product.name}}" height="75px">
                    </th>
                    <td scope="row">
                        {{product.product.name}}</br>
                        <small>{{product.product.subtitle}}</small>
                    </td>
                    <td>{{product.quantity}}</td>
                    <td>{{(product.product.price / 100)|number_format(2,',','.')}}</td>
                    <td>{{((product.product.price / 100) * product.quantity)|number_format(2,',','.')}}</td>
                </tr>
                {% set total = total + (product.product.price * product.quantity) %}
            {% endfor %}
        </tbody>
    </table>
    <div class="my-2 text-right bold">Nombre de produit(s) : {{ cart|length }} </div>
<div class="my-2 text-right bold">Total : {{(total / 100) |number_format(2,',','.')}}</div>

    <a href="" class="btn btn-success btn-block">Valider mon panier</a>
{% endblock %}
